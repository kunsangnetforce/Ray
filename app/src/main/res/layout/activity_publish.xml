<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_back"
    >

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back"
    >



    <LinearLayout
        android:id="@+id/camera_linear"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#999A9C"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/camera_icon"
            android:layout_gravity="center_vertical"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lockingeditext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/camera_linear"
        android:background="@drawable/editext_gradiant_back"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What are you looking for"
            android:background="@null"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/descrobeeditext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/lockingeditext"
        android:background="@drawable/editext_gradiant_back"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe it"
            android:background="@null"
            android:padding="10dp"
            android:minLines="4"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/choosecategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/descrobeeditext"
        android:background="@drawable/editext_gradiant_back"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose Category"
            android:background="@null"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_drop_down"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/choosecategory"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/inr_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:background="@drawable/editext_gradiant_back"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="INR"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_drop_down"
                android:layout_centerVertical="true"
                />

            </RelativeLayout>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="60"
            android:gravity="left"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:background="@drawable/editext_gradiant_back"
            android:padding="10dp"
            android:layout_marginLeft="1dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/publishlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/layout1"
        android:background="#F14C20"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose Category"
            style="?android:attr/borderlessButtonStyle"
            android:padding="10dp"
           android:textColor="@color/white"
            />

    </LinearLayout>

</RelativeLayout>
</ScrollView>