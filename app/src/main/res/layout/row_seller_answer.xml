<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >


    <ImageView
        android:id="@+id/seller_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ryan"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/message_txt"
        android:layout_toRightOf="@+id/seller_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I can buy it $ 30 rgtgetgwetwehg  "
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/dots_image"
        />



    <ImageView
        android:id="@+id/dots_image"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_red_vertical_dot"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:40 pm"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:layout_below="@+id/message_txt"

        />


</RelativeLayout>