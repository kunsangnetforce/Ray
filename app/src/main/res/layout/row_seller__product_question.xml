<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_back"
    >

    <RelativeLayout
        android:id="@+id/relativeLayoutQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/seller_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ryan"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/message_txt"
            android:layout_toRightOf="@+id/seller_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I can buy it $ 30 "
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/dots_image"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/dots_image"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_red_vertical_dot"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:40 pm"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_below="@+id/message_txt"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_back"
            android:layout_toRightOf="@+id/seller_image"
            android:layout_below="@+id/time_txt"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            ></View>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/seller_answer_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@color/white"

        >

        <ImageView
            android:id="@+id/user_comment"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ryan"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />

        <EditText
            android:layout_toRightOf="@+id/user_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Answer"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColorHint="@color/gray_back"
            android:textColor="@color/black"
            />

    </RelativeLayout>

</LinearLayout>